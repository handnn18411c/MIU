<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/image_size_h5"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:background="@drawable/corner_button"
    android:foreground="?attr/selectableItemBackground">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgProduct"
                android:layout_width="@dimen/icon_size_h2"
                android:layout_height="@dimen/icon_size_h2"
                android:layout_centerHorizontal="true"
                android:background="@drawable/corner_layout"
                android:scaleType="centerCrop"
                android:src="@drawable/ava" />

            <TextView
                android:id="@+id/tvPrice"
                android:layout_width="@dimen/icon_size_h2"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/imgProduct"
                android:layout_centerHorizontal="true"
                android:background="@drawable/corner_bottom"
                android:backgroundTint="#A64C4C4C"
                android:text="3.5 $"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_h3"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvProductName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvPrice"
                android:layout_gravity="center_horizontal"
                android:text="Product"
                android:textAlignment="center"
                android:textSize="@dimen/text_size_h3" />
        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>